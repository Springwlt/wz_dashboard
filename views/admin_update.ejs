<!DOCTYPE html>
<html>

<%- include head.ejs %>

<body class="hold-transition skin-blue sidebar-mini">
<!-- Site wrapper -->
<div class="wrapper">
    <script src="/plugins/jQuery/jquery-2.2.3.min.js"></script>
    <%- include header.ejs %>
    <%- include menu.ejs %>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <section class="content-header">
            <h1>
                管理员信息修改
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> 用户</a></li>
                <li><a href="#">管理员列表</a></li>
                <li class="active">管理员信息修改</li>
            </ol>
        </section>
        <!-- Main content -->
        <form method="post" action="/admin/updater">
            <section class="content">

                <div class="row">
                    <div class="col-md-8">
                        <div class="box">
                            <div class="box-body box-profile">
                                <div class="box-body">
                                    <div class="form-group">
                                        <label for="username">用户名</label>
                                        <input type="text" class="form-control" name="username"
                                               value='<%= admin.username %>' readonly>
                                    </div>
                                    <div class="form-group">
                                        <label for="email">邮箱</label>
                                        <input type="email" class="form-control" name="email"
                                               value='<%= admin.email %>'>
                                    </div>
                                    <div class="form-group">
                                        <label for="password">密码</label>
                                        <input type="password" class="form-control" name="password"
                                               value='<%= admin.password %>'>
                                    </div>
                                    <div class="form-group">
                                        <label for="password">个人简介</label>
                                    <textarea class="form-control" style="height: 150px" name="introduction" di="shortInfo">
                                        <%=admin.introduction%>
                                    </textarea>
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary">确定</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="box">
                            <div class="box-body box-profile">
                                <div class="form-group">
                                    <strong>激活状态</strong>
                                    <div class="radio">
                                        <label>
                                            <input type="radio" name="active" id="activeTrue" value="true">
                                            是
                                        </label>
                                        <span style="margin-left: 20px"></span>
                                        <label>
                                            <input type="radio" name="active" id="activeFalse" value="false">
                                            否
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <strong>超级管理员</strong>
                                    <div class="radio">
                                        <label>
                                            <input type="radio" name="superadmin" id="superadminTrue" value="true">
                                            是
                                        </label>
                                        <span style="margin-left: 20px"></span>
                                        <label>
                                            <input type="radio" name="superadmin" id="superadminFalse" value="false">
                                            否
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </form>
    </div>
    <!-- /.content-wrapper -->
    <%- include footer.ejs %>
    <script>
        $(function () {
            $("#user").addClass("active");
            $("#adminAll").addClass("active");
            $("#menuImg").attr('src','<%=user.head %>');
            $("#headerImg").attr('src','<%=user.head %>');
            $("#onlineAdmin").html('<%=user.username %>');
        });

        $(document).ready(function () {
            var isActive = '<%= admin.active %>';
            if (isActive == 'true') {
                $("input[name=active]:eq(0)").attr("checked", 'activeTrue');
            } else {
                $("input[name=active]:eq(1)").attr("checked", 'activeFalse');
            }
            var isSuperadmin = '<%= admin.superadmin %>';
            if (isSuperadmin == 'true') {
                $("input[name=superadmin]:eq(0)").attr("checked", 'superadminTrue');
            } else {
                $("input[name=superadmin]:eq(1)").attr("checked", 'superadminFalse');
            }
        });
    </script>

</div>
<!-- ./wrapper -->

<%- include foot_scipt.ejs %>
<script>
    function changeURL(url) {
        var newurl = "/"+url;
        $(location).attr('href', newurl);
    }
</script>
</body>
</html>