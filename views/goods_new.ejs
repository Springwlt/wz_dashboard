<!DOCTYPE html>
<html>

<%- include head.ejs %>

<body class="hold-transition skin-blue sidebar-mini">
<!-- Site wrapper -->
<div class="wrapper">
    <script src="/plugins/jQuery/jquery-2.2.3.min.js"></script>
    <%- include header.ejs %>
    <%- include menu.ejs %>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <section class="content-header">
            <h1>
                新增商品
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-user-md"></i> 商品</a></li>
                <li><a href="#">商品列表</a></li>
            </ol>
        </section>
        <!-- Main content -->
        <form method="post" action="/goods/add" enctype="multipart/form-data">
            <section class="content">

                <div class="row">
                    <div class="col-md-8">
                        <div class="box">
                            <div class="box-body box-profile">
                                <div class="box-body">
                                    <div class="form-group">
                                        <label for="caption">商品名称</label>
                                        <input type="text" class="form-control" name="caption">
                                    </div>
                                    <div class="form-group">
                                        <label for="prince">商品价格</label>
                                        <input type="text" class="form-control" name="price">
                                    </div>
                                    <div class="form-group">
                                        <label for="region">地区</label>
                                        <input type="text" class="form-control" name="region">
                                    </div>
                                    <div class="form-group">
                                        <label for="discount">折扣</label>
                                        <input type="text" class="form-control" name="discount">
                                    </div>
                                    <div class="form-group">
                                        <strong>是否认证</strong>
                                        <div class="radio">
                                            <label>
                                                <input type="radio" name="authenticated" id="activeTrue" value="true">
                                                是
                                            </label>
                                            <span style="margin-left: 20px"></span>
                                            <label>
                                                <input type="radio" name="authenticated" id="activeFalse" value="false">
                                                否
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="endDate">结束日期</label>
                                        <input type="date" name="endDate" />
                                    </div>
                                    <div class="form-group">
                                        <label for="objectId">商品详情</label>
                                        <textarea id="compose-textarea" class="form-control" style="height: 300px" name="description">
                                        </textarea>
                                    </div>
                                    <br/>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary">确定</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="box">
                            <div class="box-body box-profile">
                                <div class="form-group">
                                    <label for="type">商品类型</label>
                                    <div class="form-group">
                                        <select class="form-control" name="type">
                                            <option value="0">---请选择类型---</option>
                                            <option value="法律维权-特殊">法律维权-特殊</option>
                                            <option value="法律维权-普通">法律维权-普通</option>
                                            <option value="工商服务-特殊">工商服务-特殊</option>
                                            <option value="工商服务-普通">工商服务-普通</option>
                                            <option value="财税服务-特殊">财税服务-特殊</option>
                                            <option value="财税服务-普通">财税服务-普通</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="category">商品分类</label>
                                    <div class="form-group">
                                        <select class="form-control" name="category">
                                            <option value="0">---请选择商品类型---</option>
                                            <option value="法律维权">法律维权</option>
                                            <option value="工商服务">工商服务</option>
                                            <option value="财税服务">财税服务</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="vender">认证方式</label>
                                    <div class="form-group">
                                        <select class="form-control" name="vender">
                                            <option value="0">---选择让证方式---</option>
                                            <option value="官方">官方</option>
                                            <option value="民间">民间</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <br/>
                                    <label>请选择第一个图像文件：</label>
                                    <br/>
                                    <br/>
                                    <input type="file" id="file_input" name="pictureOne" multiple/>
                                </div>
                                <div class="form-group">
                                    <br/>
                                    <label>请选择第二个图像文件：</label>
                                    <br/>
                                    <br/>
                                    <input type="file" id="file_input" name="pictureTwo" multiple/>
                                </div>
                                <div class="form-group">
                                    <br/>
                                    <label>请选择第三个图像文件：</label>
                                    <br/>
                                    <br/>
                                    <input type="file" id="file_input" name="pictureThree" multiple/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </form>
    </div>
    <!-- /.content-wrapper -->
    <%- include footer.ejs %>
    <script>
        $(function () {
            $("#goods").addClass("active");
            $("#goodsNew").addClass("active");
            $("#menuImg").attr('src','<%=user.head %>');
            $("#headerImg").attr('src','<%=user.head %>');
            $("#onlineAdmin").html('<%=user.username %>');
        });
    </script>
</div>
<!-- ./wrapper -->

<%- include foot_scipt.ejs %>
</body>
</html>